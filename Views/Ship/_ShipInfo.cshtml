<script>
    

    function duplicateSelectedGenerator() {
        var grid = $("#shipGeneratorList").data("kendoGrid");
        var selected = grid.select();

        if (selected.length === 0) {
            alert("Nenhum gerador selecionado para duplicação.");
            return;
        }

        var dataItem = grid.dataItem(selected);
        if (!dataItem || !dataItem.GeneratorGuid) {
            alert("Erro ao obter os dados do gerador selecionado.");
            return;
        }

        $.ajax({
            url: '/Ship/DuplicateGenerator',
            type: 'POST',
            data: { GeneratorGuid: dataItem.GeneratorGuid },
            success: function (response) {
                if (response.success) {
                    var newGenerator = response.novoGerador;

                    // ✅ Insere automaticamente na Grid sem recarregar toda página
                    grid.dataSource.add(newGenerator);

                    // Opcional: já seleciona o novo item para edição visual
                    var newItem = grid.dataSource.get(newGenerator.GeneratorGuid);
                    var row = grid.table.find("tr[data-uid='" + newItem.uid + "']");
                    grid.select(row);
                    
                    alert("Gerador duplicado com sucesso!");

                    // Abre modal ou formulário já com o novo item
                    preencherFormularioDuplicado(newGenerator);
                    $("#modalGenerator").modal("show");
                } else {
                    alert(response.message);
                }
            },
            error: function () {
                alert('Erro ao duplicar o gerador.');
            }
        });
    }

    function preencherFormularioDuplicado(novoGerador) {
        $("#ShipGenerator_GeneratorGuid").val(novoGerador.GeneratorGuid);
        $("#ShipGenerator_ShipGuid").val(novoGerador.ShipGuid);
        $("#ShipGenerator_Name").val(novoGerador.Name);
        $("#ShipGenerator_Order").data("kendoNumericTextBox").value(novoGerador.Order);
        $("#ShipGenerator_kW").data("kendoNumericTextBox").value(novoGerador.kW);
        $("#ShipGenerator_KgDieselkWh").data("kendoNumericTextBox").value(novoGerador.KgDieselkWh);
        $("#ShipGenerator_FuelPrice").data("kendoNumericTextBox").value(novoGerador.FuelPrice);
        $("#ShipGenerator_EfficientMotorSwitchboard").data("kendoNumericTextBox").value(novoGerador.EfficientMotorSwitchboard);
        $("#ShipGenerator_MaintenanceCost").data("kendoNumericTextBox").value(novoGerador.MaintenanceCost);
        $("#ShipGenerator_PowerProduction").prop('checked', novoGerador.PowerProduction);
        $("#ShipGenerator_ExcludeAutoTune").prop('checked', novoGerador.ExcludeAutoTune);
        $("#ShipGenerator_TypeGuid").data("kendoDropDownList").value(novoGerador.TypeGuid);
        $("#ShipGenerator_FuelTypeGuid").data("kendoDropDownList").value(novoGerador.FuelTypeGuid);

        $("#fuelComsumptionList").data("kendoGrid").dataSource.read();
    }




    // Tornar a função acessível globalmente
    window.duplicateSelectedGenerator = duplicateSelectedGenerator;



    function saveGenerators(generators) {
        if (!Array.isArray(generators) || generators.length === 0) {
            console.warn("⚠️ Nenhum gerador fornecido para salvar.");
            alert("Nenhum gerador foi preparado para salvar.");
            return;
        }

        $.ajax({
            url: "http://localhost:5210/Ship/SaveGenerators",
            method: "POST",
            contentType: "application/json",
            data: JSON.stringify(generators),
            success: function (response) {
                console.log("✅ Geradores salvos com sucesso:", response);

                // Recarrega o grid, se existir
                const grid = $("#shipGeneratorList").data("kendoGrid");
                if (grid) {
                    grid.dataSource.read().then(function () {
                        grid.refresh();
                        console.log("🔁 Grid recarregado após salvar o gerador.");
                    });
                }

                alert("Gerador salvo com sucesso!");
            },
            error: function (xhr) {
                console.error("❌ Erro ao salvar geradores:", xhr);
                let message = "Falha ao salvar gerador.";

                if (xhr.responseJSON && xhr.responseJSON.details)
                    message += "\nDetalhes: " + xhr.responseJSON.details;

                alert(message);
            }
        });
    }






        function duplicateSelectedProfile() {
            var grid = $("#shipProfilesList").data("kendoGrid");
            var selected = grid.select();

            if (selected.length === 0) {
                alert("Nenhum perfil selecionado para duplicação.");
                return;
            }

            var dataItem = grid.dataItem(selected);
            
            if (!dataItem) {
                alert("Erro ao obter os dados do perfil selecionado.");
                return;
            }

            var newProfile = {
                ProfilGuid: kendo.guid(), // Gera um novo ID único
                Name: dataItem.Name + " (Copy)"
            };

            grid.dataSource.add(newProfile);
            grid.refresh();

            console.log("Novo perfil duplicado:", newProfile);
        }

// Tornar a função acessível globalmente
    window.duplicateSelectedProfile = duplicateSelectedProfile;


    function removeGenerator() {
    var grid = $("#shipGeneratorList").data("kendoGrid");
    var selected = grid.select();

    if (selected.length === 0) {
        alert("Nenhum gerador selecionado para remoção.");
        return;
    }

    selected.each(function () {
        var dataItem = grid.dataItem(this);
        if (dataItem && dataItem.GeneratorGuid) {
            // Requisição para backend
            $.ajax({
                url: "http://localhost:5210/Ship/RemoveShipGenerator",
                method: "POST",
                contentType: "application/json",
                data: JSON.stringify({
                    //UserId: "support",
                    //Password: "Morten09gutt",
                    Server: "localhost\\SQLEXPRESS",
                    Database: "Susteni",
                    Parameters: {
                        filter: `GeneratorGuid = '${dataItem.GeneratorGuid}'`
                    }
                }),
                success: function (response) {
                    console.log("Gerador removido com sucesso:", dataItem.GeneratorGuid);

                    // Agora sim remove do grid depois do sucesso no backend
                    grid.dataSource.remove(dataItem);
                    grid.refresh();
                },
                error: function (err) {
                    console.error("Erro ao excluir gerador:", err);
                    alert("Erro ao excluir o gerador no banco de dados.");
                }
            });
        }
    });
}


    // Torna a função acessível globalmente
    window.removeGenerator = removeGenerator;



</script>


